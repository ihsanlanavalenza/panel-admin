<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0-ios;net6.0-android;net6.0-windows</TargetFramework>
    <RootNamespace>MauiTodoMongo</RootNamespace>
    <AssemblyName>MauiTodoMongo</AssemblyName>
    <ApplicationTitle>Maui Todo Mongo</ApplicationTitle>
